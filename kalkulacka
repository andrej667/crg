#include<iostream>

using namespace std;

int main()
{

	int num1, num2, selection;

	cout << "Prosim zadajte cislo: ";
	cin >> num1;

	cout << "Prosim zadajte cele cislo: ";
	cin >> num2;

	cout << "\n\n\n";

	cout << "Vyberte si funkciu:\n";
	cout << "1. scitanie\n";
	cout << "2. odcitanie\n";
	cout << "3. nasobenie\n";
	cout << "4. delenie\n";
	cout << "Selection: ";
	cin >> selection;

	cout << "\n\n\n";

	switch (selection)
	{
	case 1:
		cout << "The sum of " << num1 << " and " << num2 << " is " << num1 + num2 << endl;
		break;
	case 2:
		cout << "The difference of " << num1 << " and " << num2 << " is " << num1 - num2 << endl;
		break;
	case 3:
		cout << "The product of " << num1 << " and " << num2 << " is " << num1 * num2 << endl;
		break;
	case 4:
		cout << "The quotient of " << num1 << " and " << num2 << " is " << num1 / num2 << endl;
		break;
	default:
		cout << "Invalid selection\n";
	}
	return 0;
}
