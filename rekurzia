#include<iostream>
using namespace std;

int main() {
	int n;
	long double factorial = 1.0;
	cout << "zadajte kladne cislo:";
	cin >> n;
	
	if (n < 0)
		cout << "chyba, faktorial s negativnym cislom neexistuje.";
	else {
		for (int i = 1; i <= n; ++i) {
			factorial *= i;

		}
		cout << "faktorial" << n << " je " << factorial;
	}
	return 0;

}
